{
    "name": "@simplix/core",
    "version": "0.1.0",
    "description": "A modular, type-safe foundation for Simplix UI. Headless logic, utilities, and shared primitives for building consistent UI components.",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Noctua Constans",
        "url": "https://github.com/noctua-constans"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/noctua-constans/simplix-ui.git"
    },
    "homepage": "https://github.com/noctua-constans/simplix-ui",
    "bugs": {
        "url": "https://github.com/noctua-constans/simplix-ui/issues"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=20",
        "pnpm": ">=10"
    },
    "scripts": {
        "build": "tsup",
        "clean": "rm -rf {dist,node_modules}",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "keywords": [
        "react",
        "react-ui",
        "react-components",
        "ui-library",
        "design-system",
        "component-library",
        "typescript",
        "headless",
        "headless-ui",
        "atomic-design",
        "ui-constructor",
        "tokens",
        "theming",
        "css-agnostic",
        "unopinionated",
        "rslx",
        "simplix"
    ],
    "packageManager": "pnpm@10.25.0",
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.17",
        "vitest": "^4.0.17"
    }
}
